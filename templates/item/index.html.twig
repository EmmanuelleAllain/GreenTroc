{% extends 'base.html.twig' %}

{% block title %}Chercher un objet{% endblock %}

{% block body %}

{% include "_searchblock.html.twig" %}


<div class="container mt-3">
    <div class="row d-flex justify-content-center" id="card-container">
    {% for item in items %}
        <div class="card shadow col-10 col-sm-5 col-md-3 m-2" id="{{ item.id }}">
            <a href="{{ path('app_item_show', {id:item.id}) }}">
                <img src="../uploads/{{ item.picture }}" class="card-img-top mt-2" alt="photo de l'objet">
            </a>
            <div class="card-body">
                <h3 class="card-title">{{ item.name }}</h3>
                <p class="card-text">{{ item.categoryType.categoryName }}</p>
                <a href="{{ path('app_item_show', {id:item.id}) }}" class="btn btn-primary">Plus de d√©tails</a>
            </div>
        </div> 
    {% endfor %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('search') }}
{% endblock %}
